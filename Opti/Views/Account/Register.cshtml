@{
    ViewData["Title"] = "Register";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="row g-0">
                    <!-- Logo area on the left -->
                    <div class="col-md-5 bg-light d-flex align-items-center justify-content-center">
                        <div class="p-4 text-center">
                            <!-- Logo image -->
                            <div class="mb-5">
                                <img src="/images/Optiflows.png" alt="Company Logo" class="img-fluid" style="max-width: 180px; width: auto;">
                            </div>
                            <h3 style="color: #007bff;">Welcome!</h3>
                            <p style="color: #6c757d;">Create an account to get started.</p>
                        </div>
                    </div>

                    <!-- Registration form on the right -->
                    <div class="col-md-7">
                        <div class="card-body p-4">
                            <h2 class="text-center mb-4" style="color: #007bff;">Register</h2>

                            <form method="post" asp-controller="Account" asp-action="Register">
                                <div class="mb-3">
                                    <label for="Username" style="color: #333;">Username</label>
                                    <input type="text" class="form-control" id="Username" name="Username" required placeholder="Enter username" />
                                </div>

                                <div class="mb-3">
                                    <label for="Email" style="color: #333;">Email</label>
                                    <input type="email" class="form-control" id="Email" name="Email" required placeholder="Enter email" />
                                </div>

                                <div class="mb-3">
                                    <label for="Password" style="color: #333;">Password</label>
                                    <input type="password" class="form-control" id="Password" name="Password" required placeholder="Enter password" />
                                </div>

                                <div class="mb-3">
                                    <label for="ConfirmPassword" style="color: #333;">Confirm Password</label>
                                    <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required placeholder="Confirm password" />
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn" style="background-color: #007bff; color: white;">Register</button>
                                </div>
                            </form>

                            <div class="text-center mt-3">
                                <a href="@Url.Action("Login", "Account")" style="color: #007bff;">Already have an account? Login here.</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>