@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #f8f9fa; /* Light gray background */
        margin: 0; /* Reset default body margin */
        font-family: sans-serif; /* A common, readable font */
    }

    /* Style for the top navbar */
    .navbar {
        background-color: #343a40; /* Dark background for navbar */
        color: #fff;
        padding: 0px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .navbar-brand {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .navbar-nav {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
    }

    .nav-item {
        margin-left: 20px;
    }

    .nav-link {
        color: #fff;
        text-decoration: none;
    }

        .nav-link:hover {
            color: #cccccc;
        }

    /* Styles for the login container (centered below the navbar) */
    .login-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        width: 400px;
        max-width: 90%;
        margin: 30px auto; /* Center the container horizontally with top margin */
    }

    h2 {
        text-align: center;
        color: #007bff; /* Primary blue color */
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        color: #495057; /* Dark gray label text */
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 10px 15px;
        border: 1px solid #ced4da; /* Light gray border */
        border-radius: 5px;
        box-sizing: border-box;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .form-check {
        margin-bottom: 20px;
        padding-left: 1.5em;
    }

    .form-check-input {
        float: left;
        margin-left: -1.5em;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 12px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-center {
        text-align: center;
    }

    .mt-3 {
        margin-top: 1.5rem;
    }

    .text-center a {
        color: #28a745; /* Success green color for the link */
        text-decoration: none;
    }

        .text-center a:hover {
            text-decoration: underline;
        }
</style>


    <div class="login-container">
        <h2>@ViewData["Title"]</h2>
        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="form-group">
                <label for="Username">Username</label>
                <input type="text" class="form-control" id="Username" name="Username" required placeholder="Enter username" />
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                <input type="password" class="form-control" id="Password" name="Password" required placeholder="Enter password" />
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe" />
                <label class="form-check-label" for="RememberMe">Remember me</label>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>

        <div class="text-center mt-3">
            <a href="@Url.Action("Register", "Account")">Don't have an account? Register here.</a>
        </div>
    </div>
