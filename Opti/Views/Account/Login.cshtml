@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="row g-0">
                    <!-- Logo area on the left -->
                    <div class="col-md-5 bg-light d-flex align-items-center justify-content-center">
                        <div class="p-4 text-center">
                            <!-- Logo image -->
                            <div class="mb-5">
                                <img src="/images/Optiflows.png" alt="Company Logo" class="img-fluid" style="max-width: 180px; width: auto;">
                            </div>
                            <h3 style="color: #007bff;">Welcome Back!</h3>
                            <p style="color: #6c757d;">Login to continue to your account.</p>
                        </div>
                    </div>
                    <!-- Login form on the right -->
                    <div class="col-md-7">
                        <div class="card-body p-4">
                            <h2 class="text-center mb-4" style="color: #007bff;">Login</h2>
                            <form method="post" asp-controller="Account" asp-action="Login">
                                <div class="mb-3">
                                    <label for="Username" style="color: #333;">Username</label>
                                    <input type="text" class="form-control" id="Username" name="Username" required placeholder="Enter username" />
                                </div>
                                <div class="mb-3">
                                    <label for="Password" style="color: #333;">Password</label>
                                    <input type="password" class="form-control" id="Password" name="Password" required placeholder="Enter password" />
                                </div>
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe" />
                                    <label class="form-check-label" for="RememberMe" style="color: #333;">Remember me</label>
                                </div>
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn" style="background-color: #007bff; color: white;">Login</button>
                                </div>
                            </form>
                            <div class="text-center mt-3">
                                <a href="@Url.Action("Register", "Account")" style="color: #007bff;">Don't have an account? Register here.</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>