@{
    ViewData["Title"] = "Home Page";
}

<!-- Link to external CSS -->
<link rel="stylesheet" href="~/css/home.css" />

<!-- Hero Section with parallax effect -->
<div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">Welcome to Opti</h1>
            <p class="hero-subtitle">Your comprehensive manufacturing and production management solution</p>
            <div class="hero-cta">
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg">View Products</a>
                <a asp-controller="Machines" asp-action="Index" class="btn btn-outline-light btn-lg">View Machines</a>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <h2 class="section-title text-center">Our Key Solutions</h2>
        <div class="row">
            <!-- Feature: Production Orders -->
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <h3>Production Orders</h3>
                    <p>Streamline your production workflow with our comprehensive order management system.</p>
                    <a asp-controller="ProductionOrders" asp-action="Index" class="btn btn-outline-primary">Explore</a>
                </div>
            </div>

            <!-- Feature: Machine Management -->
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-cogs"></i>
                    </div>
                    <h3>Machine Management</h3>
                    <p>Track and manage all your machinery with our detailed logging and monitoring tools.</p>
                    <a asp-controller="Machines" asp-action="Index" class="btn btn-outline-primary">Explore</a>
                </div>
            </div>

            <!-- Feature: Customer Orders -->
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <h3>Customer Orders</h3>
                    <p>Efficiently manage customer orders and track their progress from submission to delivery.</p>
                    <a asp-controller="CustomerOrders" asp-action="Index" class="btn btn-outline-primary">Explore</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section">
    <div class="container">
        <div class="cta-content">
            <h2>Ready to Optimize Your Production?</h2>
            <p>Get started with our comprehensive tools and take control of your manufacturing processes.</p>
            <div class="cta-buttons">
                <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg">Register Now</a>
                <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-light btn-lg">Contact Us</a>
            </div>
        </div>
    </div>
</section>