@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section with proper background image implementation -->
<div class="container-fluid py-5 bg-light" style="background-image: url('/images/background.jpg'); background-size: cover; background-position: center; position: relative; height: 500px;">
    <!-- Add overlay for better text readability -->
    <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0,0,0,0.5);"></div>
    <div class="row position-relative h-100 w-700">

        <!-- position-relative makes content appear above the overlay -->
        <div class="col-md-6 d-flex flex-column justify-content-center text-white">
            <!-- text-white for better contrast -->
            <h1 class="display-4 fw-bold">Welcome to Opti</h1>
            <p class="lead">Your comprehensive manufacturing and production management solution.</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-4">
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg px-4 me-md-2">View Products</a>
                <a asp-controller="Machines" asp-action="Index" class="btn btn-outline-light btn-lg px-4">View Machines</a>
			</div><img src="C:\Users\user\Downloads\background.jpg" />
        </div>
    </div>
</div>

<!-- Feature Boxes Section -->
<div class="container my-5">
    <h2 class="text-center mb-4">Our Features</h2>
    <div class="row">
        <!-- Feature Box 1 -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <!-- Image Container -->
                <div class="bg-light text-center p-4">
                    <!-- Proper image implementation -->
                    <img src="/images/product.jpg alt="Production Orders" class="img-fluid rounded" style="height: 120px; width: 100%; object-fit: cover;">
                </div>
                <div class="card-body">
                    <h5 class="card-title">Production Orders</h5>
                    <p class="card-text">Streamline your production workflow with our comprehensive order management system.</p>
                    <a asp-controller="ProductionOrders" asp-action="Index" class="btn btn-sm btn-outline-primary">Explore</a>
                </div>
            </div>
        </div>

        <!-- Feature Box 2 -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <!-- Image Container -->
                <div class="bg-light text-center p-4">
                    <!-- Proper image implementation -->
                    <img src="/images/machine-icon.jpg" alt="Machine Management" class="img-fluid rounded" style="height: 120px; width: 100%; object-fit: cover;">
                </div>
                <div class="card-body">
                    <h5 class="card-title">Machine Management</h5>
                    <p class="card-text">Track and manage all your machinery with our detailed logging and monitoring tools.</p>
                    <a asp-controller="Machines" asp-action="Index" class="btn btn-sm btn-outline-primary">Explore</a>
                </div>
            </div>
        </div>

        <!-- Feature Box 3 -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <!-- Image Container -->
                <div class="bg-light text-center p-4">
                    <!-- Proper image implementation -->
                    <img src="/images/customer-icon.jpg" alt="Customer Orders" class="img-fluid rounded" style="height: 120px; width: 100%; object-fit: cover;">
                </div>
                <div class="card-body">
                    <h5 class="card-title">Customer Orders</h5>
                    <p class="card-text">Efficiently manage customer orders and track their progress from submission to delivery.</p>
                    <a asp-controller="CustomerOrders" asp-action="Index" class="btn btn-sm btn-outline-primary">Explore</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Dashboard Preview Section -->
<div class="container bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">Dashboard Overview</h2>
        <div class="row">
            <!-- Left Column - Stats -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        Production Statistics
                    </div>
                    <div class="card-body">
                        <!-- Stats Display Area -->
                        <div class="mb-3 p-3 bg-white rounded border">
                            <h5 class="text-secondary">Active Orders</h5>
                            <h3 class="mb-0">24</h3>
                        </div>
                        <div class="mb-3 p-3 bg-white rounded border">
                            <h5 class="text-secondary">Machines Operating</h5>
                            <h3 class="mb-0">12</h3>
                        </div>
                        <div class="p-3 bg-white rounded border">
                            <h5 class="text-secondary">Completed Today</h5>
                            <h3 class="mb-0">8</h3>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Middle Column - Chart -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-success text-white">
                        Monthly Production
                    </div>
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <!-- Chart Display Area -->
                        <div class="bg-secondary rounded p-5 w-100" style="height: 200px;">
                            <span class="text-light">Chart Placeholder</span>
                            <!-- Example: Insert chart component here -->
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Recent Activities -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-info text-white">
                        Recent Activities
                    </div>
                    <div class="card-body">
                        <!-- Timeline Display Area -->
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item px-0">
                                <span class="badge bg-success me-2">New</span>
                                Order #12345 created
                            </li>
                            <li class="list-group-item px-0">
                                <span class="badge bg-warning me-2">Update</span>
                                Machine #3 maintenance scheduled
                            </li>
                            <li class="list-group-item px-0">
                                <span class="badge bg-info me-2">Info</span>
                                Production quota reached
                            </li>
                            <li class="list-group-item px-0">
                                <span class="badge bg-danger me-2">Alert</span>
                                Machine #5 needs inspection
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action Section -->
<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card bg-dark text-white shadow">
                <div class="card-body p-5 text-center">
                    <h2 class="mb-4">Ready to Optimize Your Production?</h2>
                    <p class="lead mb-4">Get started with our comprehensive tools and take control of your manufacturing processes.</p>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg px-4 me-md-2">Register Now</a>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-light btn-lg px-4">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</div>