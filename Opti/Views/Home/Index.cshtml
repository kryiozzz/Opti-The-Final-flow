@{
    ViewData["Title"] = "Home Page";
}

<!-- Link to external CSS -->
<link rel="stylesheet" href="~/css/home.css" />

<!-- Hero Section with parallax effect -->
<div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">Welcome to Opti</h1>
            <p class="hero-subtitle">Your comprehensive manufacturing and production management solution</p>
            <div class="hero-cta">
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-light btn-lg">View Products</a>
                <a asp-controller="Machines" asp-action="Index" class="btn btn-outline-light btn-lg">View Machines</a>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <h2 class="section-title text-center">Our Key Solutions</h2>
        <div class="row">
            <!-- Feature: Production Orders -->
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <h3>Production Orders</h3>
                    <p>Streamline your production workflow with our comprehensive order management system.</p>
                    <a asp-controller="ProductionOrders" asp-action="Index" class="btn btn-outline-primary">Explore</a>
                </div>
            </div>

            <!-- Feature: Machine Management -->
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-cogs"></i>
                    </div>
                    <h3>Machine Management</h3>
                    <p>Track and manage all your machinery with our detailed logging and monitoring tools.</p>
                    <a asp-controller="Machines" asp-action="Index" class="btn btn-outline-primary">Explore</a>
                </div>
            </div>

            <!-- Feature: Customer Orders -->
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <h3>Customer Orders</h3>
                    <p>Efficiently manage customer orders and track their progress from submission to delivery.</p>
                    <a asp-controller="CustomerOrders" asp-action="Index" class="btn btn-outline-primary">Explore</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section">
    <div class="container">
        <div class="cta-content">
            <h2>Ready to Optimize Your Production?</h2>
            <p>Get started with our comprehensive tools and take control of your manufacturing processes.</p>
            <div class="cta-buttons">
                <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg">Register Now</a>
                <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-light btn-lg">Contact Us</a>
            </div>
        </div>
    </div>
</section>

<footer class="footer">
    <!-- Top divider line (wider now) -->
    <hr>

    <div class="footer-container">
        <div class="footer-column">
            <h3 class="footer-heading">Quick Links</h3>
            <ul class="footer-links">
                <li><a href="#">Home</a></li>
                <li><a href="#">Products</a></li> 
                <li><a href="#">Machines</a></li>
                <li><a href="#">About Us</a></li>
            </ul>
        </div>

        <div class="footer-column">
            <h3 class="footer-heading">Contact Us</h3>
            <ul class="footer-contact">
                <li>123 Business Park, Davao City, PH</li>
                <li>+63 912 345 6789</li>
                <li>info@optiflow.com</li>
                <li>Monday-Friday: 9:00 AM - 5:00 PM</li>
            </ul>
        </div>

        <div class="footer-column">
            <h3 class="footer-heading">Newsletter</h3>
            <div class="footer-newsletter">
                <p>Subscribe to our newsletter for the latest updates and offers.</p>
                <form class="newsletter-form">
                    <input type="email" class="newsletter-input" placeholder="Your email">
                    <button type="submit" class="newsletter-button">→</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bottom divider line (wider now) -->
    <hr>

    <div class="footer-bottom">
        <div class="copyright">
            © 2025 - OptiFlow. All rights reserved.
        </div>
        <div class="footer-bottom-links">
            <a href="#">About Us</a> 
            <a href="#">Privacy Policy</a>
            <a href="#">Terms of Service</a>
            <a href="#">Cookie Policy</a>
        </div>
    </div>

    <a href="#" class="back-to-top">↑</a>
</footer>

<script>
    // Back to top button functionality
    const backToTopButton = document.getElementById('backToTop');

    window.addEventListener('scroll', () => {
        if (window.pageYOffset > 300) {
            backToTopButton.classList.add('visible');
        } else {
            backToTopButton.classList.remove('visible');
        }
    });

    backToTopButton.addEventListener('click', (e) => {
        e.preventDefault();
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });
</script>